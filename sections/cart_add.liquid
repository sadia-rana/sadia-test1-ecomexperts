{% schema %}
  {
    "name": "Section name",
    "settings": []
  }
  
{% endschema %}
{
   "tags":[
      {
         "name":"cart_add",
         "description":"Adds a product to the cart",
         "parameters":[
            {
               "name":"product_id",
               "description":"The ID of the product to add to the cart",
               "type":"string"
            },
            {
               "name":"quantity",
               "description":"The quantity of the product to add to the cart",
               "type":"integer"
            },
            {
               "name":"variants",
               "description":"The variants of the product to add to the cart",
               "type":"array"
            }
         ]
      }
   ]
}
{% stylesheet %}
  {% macro cart_add(product_id, quantity, variants) %}
  {% if product_id %}
    {% set product = shopify_product(product_id) %}
    {% if product %}
      {% cart_add product, quantity, variants %}
    {% endif %}
  {% endif %}
{% endmacro %}
  {% assign leather_bag = shopify_product('1234567890') %}

{% assign soft_winter_jacket = shopify_product('9876543210') %}

{% if leather_bag %}
  {% cart_add leather_bag, quantity: 1, variants: ['Black', 'Medium'] %}

  {% if not cart.contains('soft_winter_jacket') %}
    {% cart_add soft_winter_jacket, quantity: 1, price: 0.01 %}
  {% endif %}
{% endif %}
{% endstylesheet %}

